<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Support Client - Agence{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ðŸŽ«</text></svg>">
        
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        
        {% block stylesheets %}
        <style>
            .bg-gradient-primary {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
            }
            .card {
                border-radius: 15px;
                transition: transform 0.2s ease-in-out;
            }
            .card:hover {
                transform: translateY(-2px);
            }
            .btn {
                border-radius: 10px;
                font-weight: 500;
            }
            .form-control, .form-select {
                border-radius: 10px;
                border: 1px solid #e0e0e0;
                transition: border-color 0.3s ease;
            }
            .form-control:focus, .form-select:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            }
            .navbar-brand {
                font-weight: 600;
                font-size: 1.3rem;
            }
        </style>
        {% endblock %}

        {% block javascripts %}
            {# Temporairement dÃ©sactivÃ© pour Ã©viter les conflits Turbo #}
            {# {% block importmap %}{{ importmap('app') }}{% endblock %} #}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        {% endblock %}
    </head>
    <body class="bg-light">
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_home') }}">
                    <i class="fas fa-headset me-2"></i>
                    Support Agence
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home') }}">
                                <i class="fas fa-home me-1"></i>
                                Accueil
                            </a>
                        </li>
                        {% if is_granted('ROLE_USER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_ticket_index') }}">
                                    <i class="fas fa-ticket-alt me-1"></i>
                                    Tickets
                                </a>
                            </li>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-cog me-1"></i>
                                    Administration
                                </a>
                                <ul class="dropdown-menu shadow">
                                    <li><a class="dropdown-item" href="{{ path('app_admin_index') }}">
                                        <i class="fas fa-tachometer-alt me-2"></i>
                                        Tableau de bord
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('app_admin_categories') }}">
                                        <i class="fas fa-tags me-2"></i>
                                        CatÃ©gories
                                    </a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_admin_statuts') }}">
                                        <i class="fas fa-flag me-2"></i>
                                        Statuts
                                    </a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_admin_users') }}">
                                        <i class="fas fa-users me-2"></i>
                                        Utilisateurs
                                    </a></li>
                                </ul>
                            </li>
                        {% endif %}
                    </ul>
                    
                    <ul class="navbar-nav">
                        {% if is_granted('ROLE_USER') %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-1"></i>
                                    {{ app.user.prenom }}
                                </a>
                                <ul class="dropdown-menu shadow">
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                                        <i class="fas fa-sign-out-alt me-2"></i>
                                        Se dÃ©connecter
                                    </a></li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">
                                    <i class="fas fa-sign-in-alt me-1"></i>
                                    Se connecter
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <main>
            <!-- Messages flash -->
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show m-3 shadow-sm" role="alert">
                        <i class="fas fa-{{ label == 'success' ? 'check-circle' : (label == 'error' ? 'exclamation-triangle' : 'info-circle') }} me-2"></i>
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        <footer class="bg-dark text-white py-4 mt-auto">
            <div class="container text-center">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-1">Â© 2025 Support Agence. Tous droits rÃ©servÃ©s.</p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-1">
                            <i class="fas fa-envelope me-2"></i>
                            support@agence.com
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>
